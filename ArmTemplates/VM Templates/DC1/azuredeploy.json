{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {
      "location": "[resourceGroup().location]",
      "subScriptionID": "[subscription().subScriptionID]",
      "snapshots_externalid": "[resourceId('Trn_Lab_DCrepl_001', 'Microsoft.Compute/snapshots', 'TrnLabDCreplDC1_snap041020')]",
      "vmName": "DC1",
      "osType": "Windows",
      "vmSize": "Standard_A2_v2",
      "vnetPrefix": "vnet",
      "existingVirtualNetworkName": "[concat(variables('vnetPrefix'), uniqueString(resourceGroup().id))]",
      "existingVirtualNetworkResourceGroup": "[resourceGroup().name]",
      "subnetName": "Subnet1",
      "resourceTags": "[resourceGroup().tags]",
      "publicIPAddressType": "Dynamic",
      "subnetRef": "[resourceId(variables('existingVirtualNetworkResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', variables('existingVirtualNetworkName'),  variables('subnetName'))]",
      "nicName": "[concat(variables('vmName'), '-nic1')]",
      "privateIPAddress": "10.10.0.11",
      "lbName": "[concat('LBPublic-690-', resourceGroup().location)]",
      "lbRG": "[concat('LBResources-', resourceGroup().location)]",
      "publicIPaddressName": "[concat('IPPublic-690-', resourceGroup().location)]",
      "rgName": "[resourceGroup().name]" 
    },
    "resources": [
      {
        "apiVersion": "2015-06-15",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('nicName')]",
        "location": "[variables('location')]",
        "tags": "[variables('resourceTags')]",
        "dependsOn": [
          "NATConfigurations"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "privateIPAllocationMethod": "Static",
                "privateIPAddress": "[variables('privateIPAddress')]",
                "subnet": {
                  "id": "[variables('subnetRef')]"
                },
                "loadBalancerBackendAddressPools": [
                  {
                    "id": "[concat(resourceId(variables('lbRG'), 'Microsoft.Network/loadBalancers', variables('lbName')), '/backendAddressPools/', variables('rgName'))]"
                  }
                ],
                "loadBalancerInboundNatRules": [
                  {
                    "id": "[concat(resourceId(variables('lbRG'), 'Microsoft.Network/loadBalancers', variables('lbName')), '/inboundNatRules/', variables('vmName'), variables('rgName'), '-NAT-In')]"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Compute/disks",
        "apiVersion": "2019-07-01",
        "name": "[concat(variables('vmName'), '_OSdisk')]",
        "location": "[variables('location')]",
        "sku": {
            "name": "Standard_LRS",
            "tier": "Standard"
        },
        "properties": {
            "osType": "Windows",
            "hyperVGeneration": "V1",
            "creationData": {
                "createOption": "Copy",
                "sourceResourceId": "[variables('snapshots_externalid')]"
            },
            "diskSizeGB": 128,
            "diskIOPSReadWrite": 500,
            "diskMBpsReadWrite": 100,
            "encryption": {
                "type": "EncryptionAtRestWithPlatformKey"
            }
        }
      },
      {
        "apiVersion": "2017-03-30",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('vmName')]",
        "location": "[variables('location')]",
        "tags": "[variables('resourceTags')]",
        "dependsOn": [
          "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]",
          "[concat(variables('vmName'), '_OSdisk')]"
        ],
        "properties": {
          "hardwareProfile": {
            "vmSize": "[variables('vmSize')]"
          },
          "storageProfile": {
            "osDisk": {
              "osType": "[variables('osType')]",
              "caching": "ReadWrite",
              "createOption": "Attach",
              "managedDisk": {
                "id": "[resourceId('Microsoft.Compute/disks', concat(variables('vmName'), '_OSdisk'))]"
              }
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
              }
            ]
          }
        }
      },
      {
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "2017-05-10",
          "name": "NATConfigurations",
          "resourceGroup": "[variables('lbRG')]",
          "dependsOn": [],
          "properties": {
              "expressionEvaluationOptions": {
                  "scope": "outer"
              },
              "mode": "Incremental",
              "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "parameters": {},    
                  "variables": {
                    "lbName": "[concat('LBPublic-690-', resourceGroup().location)]",
                    "lbRG": "[concat('LBResources-', resourceGroup().location)]",
                    "location": "[resourceGroup().location]",
                    "resourceTags": "[resourceGroup().tags]"
                  },
                  "resources": [
                    {
                      "type": "Microsoft.Network/loadBalancers",
                      "apiVersion": "2019-11-01",
                      "name": "[variables('lbName')]",
                      "location": "[variables('location')]",
                      "sku": {
                        "name": "Standard"
                      },
                      "properties": {
                        "frontendIPConfigurations": [
                            {
                                "name": "LoadBalancerFrontEnd",
                                "properties": {
                                    "privateIPAllocationMethod": "Dynamic",
                                    "publicIPAddress": {
                                        "id": "[resourceId(variables('lbRG'), 'Microsoft.Network/publicIPAddresses',variables('publicIPAddressName'))]"
                                    },
                                    "privateIPAddressVersion": "IPv4"
                                }
                            }
                        ],
                        "backendAddressPools": [
                          {
                            "name": "[variables('RGName')]"
                          }
                        ],
                        "loadBalancingRules": [],
                        "probes": [],
                        "inboundNatRules": [
                          {
                            "name": "[concat(variables('vmName'), resourceGroup().name, '-NAT-In')]",
                            "properties": {
                              "frontendIPConfiguration": {
                                "id": "[concat(resourceId(variables('lbRG'), 'Microsoft.Network/loadBalancers', variables('lbName')), '/frontendIPConfigurations/LoadBalancerFrontEnd')]"
                              },
                              "frontendPort": 63415,
                              "backendPort": 3389,
                              "enableFloatingIP": false,
                              "idleTimeoutInMinutes": 4,
                              "protocol": "Tcp",
                              "enableTcpReset": false
                            }
                          }
                        ],
                        "inboundNatPools": []
                      }
                    }
                  ]
                }                    
          }
        }
    ]
}