{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
  },
  "variables": {
    "lbName": "[concat('LBPublic-690-', resourceGroup().location)]",
    "lbRG": "[concat('LBResources-', resourceGroup().location)]",
    "location": "[resourceGroup().location]",
    "RGName": "[resourceGroup().name]",
    "resourceTags": "[resourceGroup().tags]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/loadBalancers",
      "apiVersion": "2019-11-01",
      "name": "[variables('lbName')]",
      "location": "[variables('location')]",
      "properties": {
        "backendAddressPools": [
          {
            "name": "[variables('RGName')]",
            "properties": {
              "backendIPConfigurations": [
                {
                  "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                }
              ]
            }
          }
        ],
        "loadBalancingRules": [],
        "probes": [],
        "inboundNatRules": [
          {
            "name": "[concat(variables('vmName'), '-NAT-In')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', variables('lbName')), '/frontendIPConfigurations/LoadBalancerFrontEnd')]"
              },
              "frontendPort": 63415,
              "backendPort": 3389,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 4,
              "protocol": "Tcp",
              "enableTcpReset": false
            }
          }
        ],
        "inboundNatPools": []
      }
    }
  ]
}